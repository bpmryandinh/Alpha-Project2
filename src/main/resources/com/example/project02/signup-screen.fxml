<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.project02.SignupScreen">
    <children>
        <Label layoutX="45.0" layoutY="57.0" text="Signup">
            <font>
                <Font name="Arial Bold" size="35.0" />
            </font>
        </Label>
        <TextField fx:id="emailTextField" layoutX="85.0" layoutY="132.0" prefHeight="25.0" prefWidth="215.0" promptText="example@email.com" />
        <Label layoutX="84.0" layoutY="115.0" text="Email" />
      <TextField fx:id="nameTextField" layoutX="85.0" layoutY="188.0" prefHeight="25.0" prefWidth="215.0" promptText="John Doe" />
      <Label layoutX="84.0" layoutY="171.0" text="Name" />
      <PasswordField fx:id="passwordTextField" layoutX="87.0" layoutY="247.0" prefHeight="25.0" prefWidth="215.0" promptText="********" />
        <Label layoutX="84.0" layoutY="230.0" text="Password" />
        <Button fx:id="SignupButton" layoutX="108.0" layoutY="327.0" mnemonicParsing="false" onAction="#onSignupButtonPressed" text="Signup" />
        <Button layoutX="221.0" layoutY="327.0" mnemonicParsing="false" onAction="#switchToStart" text="Cancel" />
    </children>
</AnchorPane>
