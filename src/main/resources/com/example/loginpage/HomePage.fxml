<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="540" prefWidth="380" spacing="20.0" styleClass="container" stylesheets="@../../../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginpage.Controllers.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="CENTER" maxHeight="600.0" maxWidth="480.0" prefHeight="500.0" prefWidth="340.0" styleClass="home">
        <padding>
            <Insets bottom="20.0" left="25.0" right="25.0" />
        </padding>
        <VBox alignment="CENTER" prefHeight="80.0" styleClass="fieldContainer">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
           <Label styleClass="heading1" text="HOME" />
        </VBox>
         <Label fx:id="welcomeUserId" styleClass="heading3" text="No User Logged In" />
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="10" top="20" />
            </padding>
            <VBox alignment="CENTER">
                <padding>
                    <Insets bottom="10" top="10" />
                </padding>
                <Button onAction="#signUpClicked" styleClass="signUpButton" text="Sign Up" textAlignment="CENTER" />
            </VBox>
        </VBox>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="10" top="20" />
            </padding>
            <VBox alignment="CENTER">
                <padding>
                    <Insets bottom="10" top="10" />
                </padding>
                <Button onAction="#logInClicked" styleClass="logInButton" text="Log In" textAlignment="CENTER" />
            </VBox>
        </VBox>
    </VBox>
</VBox>
